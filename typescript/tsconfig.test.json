{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    // "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "target": "esnext",
    "module": "CommonJS",
    "lib": ["esnext", "ES2020"],
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": true,
    // "strict": true,
    // "noImplicitAny": true,
    // "noImplicitThis": true,
    // "noUnusedLocals": true,
    // "noImplicitReturns": true,
    "moduleResolution": "node10",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./build"
  },
  "exclude": ["build"]
}
